# Include version configuration
include version.yaml
# MANIFEST.in - Include non-Python files in source distributions
# This ensures data files are included when installing from source

# Include all SQL schemas
recursive-include src/mini_datahub/infra/sql *

# Include schema.json
include src/mini_datahub/schema.json

# Include sample data templates
recursive-include src/mini_datahub/templates *

# Include documentation
include README.md
include LICENSE

# Include important root files
include pyproject.toml
include uv.lock
include mkdocs.yml
include CHANGELOG.md

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
